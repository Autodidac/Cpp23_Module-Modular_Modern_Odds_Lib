{
  "version": 6,
  "cmakeMinimumRequired": {
    "major": 3,
    "minor": 28
  },
  "configurePresets": [
    {
      "name": "windows-msvc",
      "displayName": "Windows MSVC",
      "generator": "Ninja",
      "binaryDir": "${sourceDir}/build/windows-msvc",
      "cacheVariables": {
        "CMAKE_CXX_COMPILER": "cl",
        "CMAKE_BUILD_TYPE": "Release",
        "EPOCH_ENABLE_MODULES": "ON"
      }
    },
    {
      "name": "windows-clang",
      "displayName": "Windows clang-cl",
      "generator": "Ninja",
      "binaryDir": "${sourceDir}/build/windows-clang",
      "cacheVariables": {
        "CMAKE_CXX_COMPILER": "clang-cl",
        "CMAKE_BUILD_TYPE": "Release",
        "EPOCH_ENABLE_MODULES": "ON"
      }
    },
    {
      "name": "linux-clang",
      "displayName": "Linux Clang",
      "generator": "Ninja",
      "binaryDir": "${sourceDir}/build/linux-clang",
      "cacheVariables": {
        "CMAKE_CXX_COMPILER": "clang++",
        "CMAKE_BUILD_TYPE": "Release",
        "EPOCH_ENABLE_MODULES": "ON"
      }
    },
    {
      "name": "linux-gcc",
      "displayName": "Linux GCC",
      "generator": "Ninja",
      "binaryDir": "${sourceDir}/build/linux-gcc",
      "cacheVariables": {
        "CMAKE_CXX_COMPILER": "g++",
        "CMAKE_BUILD_TYPE": "Release",
        "EPOCH_ENABLE_MODULES": "OFF"
      }
    }
  ],
  "buildPresets": [
    {
      "name": "build-windows-msvc",
      "configurePreset": "windows-msvc"
    },
    {
      "name": "build-linux-clang",
      "configurePreset": "linux-clang"
    }
  ]
}